<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TinyMvvm.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TinyMvvm.Sample.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainView}"
            Route="MainView" />

        <ShellContent
            Title="Cities"
            ContentTemplate="{DataTemplate views:ListView}"
            Route="ListView" />
    </TabBar>
</Shell>

